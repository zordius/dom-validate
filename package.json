  "bugs": {
    "url": "https://github.com/zordius/dom-validate/issues"
  },
  "homepage": "https://github.com/zordius/dom-validate#readme",
  "dependencies": {
    "cheerio": "^0.22.0",
    "js-yaml": "^3.8.2",
    "request": "^2.81.0",
    "yargs": "^7.0.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.17.1",
    "mocha": "^3.2.0",
    "tap-xunit": "^1.7.0"
