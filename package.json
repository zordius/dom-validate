    "xunit": "node cli.js -c sample.yaml -b https://tw.search.yahoo.com -v=2 -t | node_modules/.bin/tap-xunit",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zordius/dom-validate.git"
  },
  "author": "zordius@yahoo-inc.com",
